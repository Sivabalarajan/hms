<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_marginStart="5sp"
    android:padding="5sp" >
        <TextView
            android:id="@+id/house_name"
            android:text="House name"
            android:gravity="start"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/select_view"
            android:background="@drawable/textview_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkGrayText16Style"/>

        <RadioButton
            android:id="@+id/select_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:paddingStart="20sp"/>

        <TextView
            android:id="@+id/building_name"
            android:text="desc"
            android:layout_below="@id/house_name"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/select_view"
            android:background="@drawable/textview_selector"
            style="@style/DarkGrayText14Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>