<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:padding="8dp">
    <TextView
        android:id="@+id/tvRepairHeaderDescription"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Desc"
        android:textStyle="bold"
        android:textSize="18sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tvRepairHeaderBuildingHouse"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="B / H"
        android:textStyle="bold"
        android:textSize="18sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tvRepairHeaderAmount"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="$"
        android:textStyle="bold"
        android:textSize="18sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="end|center_vertical" />
    <TextView
        android:id="@+id/tvRepairHeaderRaisedDate"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Date"
        android:textStyle="bold"
        android:textSize="18sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tvRepairHeaderStatus"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Status"
        android:textStyle="bold"
        android:textSize="18sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tvRepairHeaderInfo"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textStyle="bold"
        android:text="Info"
        android:textSize="18sp"
        android:gravity="center|center_vertical" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center_vertical" />
</LinearLayout>
