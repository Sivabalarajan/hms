<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.SelectItemActivity">
    <TextView
        android:id="@+id/select_item_text"
        style="@style/ToolBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="18sp"
        android:layout_toStartOf="@id/select_item_button"
        android:layout_gravity="start"/>
    <Button
        android:id="@+id/select_item_button"
        style="@style/ButtonStyle"
        android:tint="@android:color/background_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Select"
        android:drawablePadding="5sp"
        android:textColor="@android:color/white"
        android:drawableTint="@android:color/background_light"
        android:drawableStart="@drawable/round_check_circle_outline_24"/>

</RelativeLayout>
